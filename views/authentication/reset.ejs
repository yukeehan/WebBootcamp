<% include ../partials/header %>

<div class="container">
    <div class="text-center">
        <h1 class="h3 my-5 font-weight-normal">Reset Password</h1>
    </div>
    <div style="width:30%; margin: 25px auto;">
        <form action="/reset/<%= token %>" method="POST">
            <div class="form-group">
                <label>New Password</label>
                <input class="form-control" type="password" name="newPW" placeholder="New Password" required> 
            </div>
            <div class="form-group">
                <label>Confirm Password</label>
                <input class="form-control" type="password" name="confirmPW" placeholder="Confirm Password" required> 
            </div>
            <div class="form-group">
                <button class="btn btn-lg btn-primary btn-block">Update Password</button>
            </div>
        </form> 
    </div>
</div>


    </body>
</html>