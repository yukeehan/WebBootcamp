<% include ../partials/header %>

<div class="container">
    <div class="text-center">
        <h1 class="h3 my-5 font-weight-normal">Reset Password</h1>
    </div>
    <div style="width:30%; margin: 25px auto;">
        <form action="/reset/<%= token %>" method="GET">
            <div class="form-group">
                <label>Old Password</label>
                <input class="form-control" type="password" name="oldPW" placeholder="Old Password" required> 
            </div>
            <div class="form-group">
                <button class="btn btn-lg btn-primary btn-block">Next</button>
            </div>
        </form> 
    </div>
</div>


<% include ../partials/footer %>