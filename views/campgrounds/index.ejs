<% include ../partials/header%>

<div class="container">
    <header class="jumbotron">
        <div class="container">
            <h1 class="display-4">Welcome To YelpCamp!</h1>
            <p class="lead">View Out Hand-picked Campgrounds From All Over The World</p>
            <p>
                <a class="btn btn-primary btn-lg" role="button" href="/campgrounds/new">Add A New Campground</a>
            </p>
        </div>
    </header>

    <div class="row text-center" style="display:flex; flex-wrap: wrap;">
        <% if(noMatch !== undefined){ %>
            <div class="col-md-12">
                <img class="rounded" style="width:15%;" src="https://telegramguides.com/wp-content/uploads/2018/04/pusheen-cat-telegram-sticker-14.png">
                <h1><%= noMatch %></h1>
            </div>
        <% } %>
        <% campgrounds.forEach(function(campground){ %>
            <div class="col-md-3 col-sm-6">
                <div class="card">
                    <img class="card-img-top" src="<%= campground.image %>" alt="Card image cap">
                    <div class="card-body">
                        <h5 class="card-title"><%= campground.name %></h5>
                        <a href="/campgrounds/<%= campground._id %>" class="btn btn-primary">More Info</a>
                    </div>
                </div>
            </div>
        <% }); %>
    </div>
</div>

<% include ../partials/footer%>