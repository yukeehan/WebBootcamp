<% include ../partials/header %>
<div class="container">
    <div class="text-center">
        <h1 class="h3 my-5 font-weight-normal">Create a new campground</h1>
    </div>
    <div style="width:30%; margin:25px auto;">
        <form action="/campgrounds" method="POST" enctype="multipart/form-data"> 
        <div class="form-group">
            <label>Campground Name</label>
            <input class="form-control" type="text" name="campground[name]" placeholder="name" required>    
        </div>
        <div class="form-group">
            <label for="location">Location</label>
            <input class="form-control" type="text" name="location" id="location" placeholder="address or postalcode">
        </div>
        <div class="form-group">
            <label>Price per Night</label>
            <input class="form-control" type="number" placeholder="0.00" name="campground[price]" min="0" step="0.01" pattern="^\d+(?:\.\d{1,2})?$" required>
        </div>
        <div class="form-group">
            <label>Image</label>    
            <input class="form-control" id="image" type="file" name="image" accept="image/*" required>
        </div>
        <div class="form-group">
            <label>Description</label>
            <input class="form-control" type="text" name="campground[description]" placeholder="description" required>
        </div>
        <div class="form-group">
            <button class="btn btn-lg btn-primary btn-block">Submit</button>
        </div>
        </form>
        <a href="/campgrounds">go back</a>
    </div>
</div>

    </body>
</html>